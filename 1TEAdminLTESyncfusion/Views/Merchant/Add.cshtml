    </form>

    
    <ej-dialog id="dialogIconSave" title="Save" width="325" enable-resize="false" is-responsive="true" show-footer="true" footer-template-id="samplefooter" before-open="onbeforeopen" close="onDialogClose" show-on-init="false">
        <e-content-template>
            <div>
                Are you sure want to make these changes ?
            </div>
        </e-content-template>
    </ej-dialog>
    
    <ej-dialog id="dialogIconBack" title="Back" width="325" enable-resize="false" is-responsive="true" show-footer="true" footer-template-id="samplefooterBack" before-open="onbeforeopenBack" close="onDialogClose" show-on-init="false">
        <e-content-template>
            <div>
                Do you really wants to go back?
            </div>
        </e-content-template>
    </ej-dialog>

    @section Scripts {
    <script src="~/js/createNewMerchant.js"></script>
    <script id="samplefooter" type="text/x-jsrender">
        <div class="footerspan" style="float:right">
            <button id='btn1'>Ok</button>
            <button id='btn2'>Cancel</button>
        </div>
    </script>
    <script id="samplefooterBack" type="text/x-jsrender">
        <div class="footerspan" style="float:right">
            <button id='btn1Back'>Ok</button>
            <button id='btn2Back'>Cancel</button>
        </div>
    </script>
    }

</div>
