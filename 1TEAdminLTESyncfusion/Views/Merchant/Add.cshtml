<div class="box-body text-uppercase">
    <h1>Merchant Profile</h1>



    <form id="createMerchantForm" asp-controller="Merchant" asp-action="CreateMerchant" asp-antiforgery="true" data-ajax-method="POST">

        <div class="row">
            <div class="col-md-6">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Merchant name</label>
                                <input class="form-control" asp-for="MerchantName" />
                                <span asp-validation-for="MerchantName"></span>
                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Business Registration no</label>
                                <input class="form-control" asp-for="RegNo" />
                                <span asp-validation-for="RegNo"></span>
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>gst no</label>
                                <input class="form-control" asp-for="GSTNo" />
                                <span asp-validation-for="GSTNo"></span>
                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>website</label>
                                <input class="form-control" asp-for="WebSite" />
                                <span asp-validation-for="WebSite"></span>
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
            </div>
            <div class="col-md-6">
                <!--icons start -->
                <ul class="bs-glyphicons">
                    @for (var counter = 0; counter < 12; counter++)
