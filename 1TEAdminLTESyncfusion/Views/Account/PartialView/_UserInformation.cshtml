@model  _1TE_MY.Models.DTO.Registration_UserInformation
@using Westwind.Globalization
@using Westwind.Globalization.AspNetCore.Extensions


<form asp-controller="Account" asp-action="SaveRegistration" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#acontent">

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Emailaddress">@DbRes.T("EmailId", "Registration")</label>
                @Html.TextBoxFor(o => o.Email, new { @class = "e-textbox", placeholder = DbRes.T("EmailId", "Registration") })

            </div>
            <div class="form-group">
                <label for="Emailaddress">@DbRes.T("MobileCountryCode", "Registration")</label>
                <ej-drop-down-list id="MobileCountryID" ej-for="MobileCountryID" watermark-text="@DbRes.T("MobileCountryCode", "Registration")" width="100%">
                    <e-datamanager url="/common/GetMasters?value=Country" datatype="json" adaptor="@AdaptorType.UrlAdaptor"></e-datamanager>
                    <e-drop-down-list-fields text="countryDialCode" value="value" />
                </ej-drop-down-list>
            </div>
            <div class="form-group">
                <label for="Emailaddress">@DbRes.T("SecurityQuestion", "Registration")</label>
                <ej-drop-down-list id="SecurityQuestion" ej-for="SecurityQuestion" watermark-text="@DbRes.T("SecurityQuestion", "Registration")" width="100%">
                    <e-datamanager url="/common/GetMasters?value=SecurityQuestion" datatype="json" adaptor="@AdaptorType.UrlAdaptor"></e-datamanager>
                    <e-drop-down-list-fields text="text" value="value" />
                </ej-drop-down-list>
            </div>
        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label for="Emailaddress">@DbRes.T("Name", "Registration")</label>
                @Html.TextBoxFor(o => o.FullName, new { @class = "e-textbox", placeholder = DbRes.T("Name", "Registration") })

            </div>
            <div class="form-group">
                <label for="Emailaddress">@DbRes.T("MobileNumber", "Registration")</label>
                @Html.TextBoxFor(o => o.MobileNo, new { @class = "e-textbox", placeholder = DbRes.T("MobileNumber", "Registration") })

            </div>
            <div class="form-group">
                <label for="Emailaddress">@DbRes.T("Answer", "Registration")</label>
                @Html.TextBoxFor(o => o.Answer, new { @class = "e-textbox", placeholder = DbRes.T("Answer", "Registration") })

            </div>
        </div>
        <div class="box-footer float-right">
            <button type="submit" class="btn btn-primary uppercase pull-right">@DbRes.T("Next", "Registration") <span class="glyphicon glyphicon-forward" aria-hidden="true"></span></button>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="Emailaddress">@DbRes.T("VALIDATEOTP", "Registration")</label>
                <div class="controls">
                    @Html.TextBoxFor(o => o.OTPNo, new { @class = "e-textbox", placeholder = DbRes.T("OTPNORECEIVEDVIASMS", "Registration") })

                </div>

            </div>


        </div>
        <div class="col-md-6">
            <div class="form-group">

                <div class="controls" style="margin-top:25px">
                    <button type="button" onclick="verifyOTP();"  class="btn btn-primary uppercase" style="margin-bottom:6px;"> <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> @DbRes.T("VerifyOTP", "Registration") </button>
                    <button type="submit" class="btn btn-primary uppercase"> <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>  @DbRes.T("ResendOTP", "Registration")</button>
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(o => o.RegistrationID)
    </form>
